<Window x:Class="WpfApplication1.BoodschappenLijst"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BoodschappenLijst" Height="381" Width="463">
    <StackPanel>
        <DataGrid AutoGenerateColumns="False" IsReadOnly="True" ItemsSource="{Binding Songs}" Margin="5" SelectedItem="{Binding SelectedSong}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" />
                <DataGridTextColumn Header="Product" Binding="{Binding Artist}" Width="300" />
                <DataGridTextColumn Header="Aantal" Binding="{Binding Title}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
        
        <TextBlock Text="Totaal prijs:">
            
        </TextBlock>
    </StackPanel>
</Window>
